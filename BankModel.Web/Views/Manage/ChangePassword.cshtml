@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
    //ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<div class="container-fluid" style="margin-top:50px;">
    <div class="row">
        <div class="col-md-offset-5 col-md-4">
            @Html.Partial("_StatusMessage", Model.StatusMessage)
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h5>Change Password </h5>
                    </div>
                </div>
                <div class="panel-body">
                    <form asp-action="ChangePassword" asp-controller="Manage" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="OldPassword" class="form-control borderless" placeholder="Old pasword" />
                        </div>
                        <div class="form-group">
                            <input asp-for="NewPassword" class="form-control borderless" placeholder="New password"/>
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control borderless" placeholder="Confirm new password"/>
                        </div>
                        <button type="submit" class="btn btn-primary form-control">Update password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
