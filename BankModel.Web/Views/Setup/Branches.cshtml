@model BranchViewModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration config
@{
    ViewData["Title"] = config.GetSection("AppInfo")["Title"];
}

<div class="container-fluid top-panel">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            @Html.Partial("_StatusMessage", Model.StatusMessage)
            <form asp-action="Branches" asp-controller="Setup" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <h5>Create Branch</h5>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div asp-validation-summary="All" class="text-danger col-sm-offset-4 col-sm-8"></div>
                        <div class="form-group-sm">
                            <label asp-for="BranchCode" class="control-label enquiry-text col-sm-4"></label>
                            <div class="col-sm-8">
                                <input asp-for="BranchCode" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group-sm">
                            <label asp-for="BranchDesc" class="control-label enquiry-text col-sm-4"></label>
                            <div class="col-sm-8">
                                <input asp-for="BranchDesc" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group-sm">
                            <label asp-for="BranchLocation" class="control-label enquiry-text col-sm-4"></label>
                            <div class="col-sm-8">
                                <input asp-for="BranchLocation" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group-sm">
                            <label asp-for="BranchManager" class="control-label enquiry-text col-sm-4"></label>
                            <div class="col-sm-8">
                                <input asp-for="BranchManager" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group-sm"><input asp-for="ID" class="hidden" /></div>
                        <div class="form-group-sm">

                        </div>

                    </div>
                    <div class="panel-footer">
                        <a asp-action="BranchListing" asp-controller="Setup">View Branches</a>
                        <button class="btn btn-primary btn-sm pull-right" type="submit">Add Branch</button>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>